<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/a2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="ziedkhmiri.custom_login_google.MainActivity">

    <com.ziedkhmiri.custom.cardview.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginBottom="3dp"
        app:BackgroundColor="#ffffff"
        app:BottomEdges="false"
        app:CornerRadius="15dp"
        app:LeftBottomCorner="true"
        app:RightBottomCorner="true">
        <com.ziedkhmiri.custom.CircleImage
            android:id="@+id/image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="10dp"
            android:src="@drawable/google"
            android:layout_gravity="top|center"
            app:border_color="#000000"
            app:border_width="1dp" />
<LinearLayout
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="105dp"
    android:gravity="top|center"
    android:visibility="visible"
    >
        <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/user"
                android:background="@drawable/edittext"
                android:drawableTint="#000000"
                android:hint="@string/user_name"
                android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/passwd"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/lock"
            android:background="@drawable/edittext"
            android:drawableTint="#000000"
            android:hint="@string/Password"
            android:inputType="textPassword" />

  <Button
    android:id="@+id/signe"
    android:layout_width="300dp"
    android:layout_height="50dp"
    android:textStyle="bold"
    android:textSize="20sp"
    android:layout_marginTop="15dp"
    android:text="@string/signe_in"
    android:textColor="#fff"
    android:background="@drawable/button_login"/>
    <TextView
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:textColor="#77acfd"
        android:text="@string/create_account"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"/>
</LinearLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="105dp"
            android:gravity="top|center"
            android:animateLayoutChanges="true"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:textSize="30sp"
                android:text="Zied"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="30sp"
                android:text="Khmiri"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ziedkhmiri@gmail.com"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/gmail"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/drive"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/maps"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/photos"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/youtube"/>
            </LinearLayout>
            <TextView
                android:id="@+id/signout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:textColor="#77acfd"
                android:text="Sign out"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"/>
        </LinearLayout>
    </com.ziedkhmiri.custom.cardview.CardView>
</RelativeLayout>
